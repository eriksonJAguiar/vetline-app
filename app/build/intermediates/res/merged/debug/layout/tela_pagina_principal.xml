<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:baselineAligned="false"
        android:background="@drawable/veterinario2">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@android:color/holo_green_dark"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.02"
            android:layout_height="5dp" />

        <TextView
            android:text="Selecionar Imagem"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
            android:textSize="10sp"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/holo_green_dark"
            android:padding="5dp"
            android:layout_width="365dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    app:srcCompat="@drawable/sem_imagem"
                    android:id="@+id/btn_image"
                    android:padding="5dp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_width="91dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="91dp" />

                <TextView
                    android:text="Nome:"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_nome"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btn_image"
                    android:layout_toEndOf="@+id/btn_image" />

                <TextView
                    android:text="tipo de perfil:"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_tipo_perfil"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:layout_width="200dp"
                    android:layout_below="@+id/view_nome"
                    android:layout_alignLeft="@+id/view_nome"
                    android:layout_alignStart="@+id/view_nome"
                    android:layout_marginTop="3dp" />

                <ImageButton
                    app:srcCompat="@android:drawable/ic_menu_edit"
                    android:id="@+id/btn_editar_perfil"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_below="@+id/view_tipo_perfil"
                    android:layout_alignRight="@+id/btn_image"
                    android:layout_alignEnd="@+id/btn_image"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="106dp"
            android:id="@+id/layoutVeterinario"
            android:layout_weight="0.00"
            android:layout_marginTop="5dp">

            <TextView
                android:text="opções veterinario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_weight="0.02"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                android:textSize="10sp"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="normal|bold"
                android:textAlignment="viewStart"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/holo_green_dark"
                android:padding="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView16"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16">

                <Button
                    android:text="consultas"
                    android:layout_width="363dp"
                    android:layout_height="22dp"
                    android:id="@+id/btn_op_consulta"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/white"
                    android:padding="5dp" />

                <Button
                    android:text="agenda"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:id="@+id/btn_op_agenda"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/white"
                    android:padding="5dp" />

                <Button
                    android:text="clinicas"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_op_clinica"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:layout_height="22dp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="375dp"
            android:layout_height="35dp"
            android:layout_weight="0.38"
            android:weightSum="1">

            <TextView
                android:text="animais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:layout_weight="0.02"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                android:textSize="10sp"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="normal|bold"
                android:textAlignment="viewStart"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/holo_green_dark"
                android:padding="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView16"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_marginLeft="10dp">

                <Button
                    android:text="animal1"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:id="@+id/btn_animal_id"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="normal|bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:textAlignment="viewStart" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp">

                    <Button
                        android:text="consultas"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:id="@+id/btn_animal_consulta"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:textAlignment="viewStart"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/darker_gray"
                        android:padding="5dp" />

                    <Button
                        android:text="vacinas"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:id="@+id/btn_animal_vacina"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:textAlignment="viewStart"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/darker_gray"
                        android:padding="5dp" />

                    <Button
                        android:text="serviços"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:id="@+id/btn_animal_servicos"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:textAlignment="viewStart"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/darker_gray"
                        android:padding="5dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>