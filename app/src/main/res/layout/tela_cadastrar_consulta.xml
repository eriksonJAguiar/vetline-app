<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@drawable/veterinario2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            >

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@android:color/holo_green_dark"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.02"
                android:layout_height="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:paddingRight="10dp">

                <TextView
                    android:text="sintomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@android:color/holo_green_dark" />

                <EditText
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/campo_sintomas"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2.50"
                    android:layout_height="100dp" />

                <TextView
                    android:text="serviços"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@android:color/holo_green_dark" />

                <CheckBox
                    android:text="Banho"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/check_banho"
                    android:layout_marginLeft="10dp"
                    android:button="@android:drawable/checkbox_off_background"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@android:color/background_light"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

                <CheckBox
                    android:text="Tosa"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/check_tosa"
                    android:layout_marginLeft="10dp"
                    android:button="@android:drawable/checkbox_off_background"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@android:color/background_light"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="375dp"
                android:id="@+id/layoutVerificaVeterinario">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="5dp"
                android:paddingRight="10dp">

                <TextView
                    android:text="Data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_weight="9.07"
                    android:padding="5dp" />

                <TimePicker
                    android:layout_width="match_parent"
                    android:layout_height="335dp"
                    android:id="@+id/campo_hora"
                    android:layout_marginLeft="10dp"
                    android:headerBackground="@android:color/holo_green_light"
                    android:layout_marginTop="5dp"
                    android:numbersSelectorColor="@android:color/holo_green_light"
                    android:layout_weight="0.09"
                    android:layout_marginBottom="5dp" />

                <DatePicker
                    android:layout_height="wrap_content"
                    android:id="@+id/campo_data"
                    android:layout_marginLeft="12dp"
                    android:animateLayoutChanges="true"
                    android:animationCache="true"
                    android:headerBackground="@android:color/holo_green_light"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@android:color/background_light"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:text="Pagamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/holo_green_dark"
                    android:padding="5dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:weightSum="1"
                    android:id="@+id/campo_pagamento">

                    <RadioButton
                        android:text="Cartão de Debito"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/op_cartao_debito"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textColor="@android:color/holo_green_dark"
                        android:button="@android:drawable/radiobutton_off_background"
                        android:background="@android:color/background_light" />

                    <RadioButton
                        android:text="Boleto"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/op_boleto"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textColor="@android:color/holo_green_dark"
                        android:button="@android:drawable/radiobutton_off_background"
                        android:background="@android:color/background_light" />
                </RadioGroup>

            </LinearLayout>

            <Button
                android:text="Cadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cadastar"
                android:layout_weight="0.02"
                android:background="@android:color/holo_green_dark"
                android:textColor="@android:color/background_light" />

        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>