                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:text="genêro"
                        android:padding="3dip"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@android:color/holo_green_light"
                        android:textStyle="normal|bold"
                        android:fontFamily="sans-serif-medium"
                        />
                    <TextView
                        android:text="masculino"
                        android:gravity="right"
                        android:padding="3dip"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@color/wallet_dim_foreground_inverse_holo_dark"
                        android:textStyle="normal|bold"
                        android:fontFamily="sans-serif-medium"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:text="raça"
                        android:padding="3dip"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@android:color/holo_green_light"
                        android:textStyle="normal|bold"
                        android:fontFamily="sans-serif-medium"
                        />
                    <TextView
                        android:text="asd"
                        android:gravity="right"
                        android:padding="3dip"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@color/wallet_dim_foreground_inverse_holo_dark"
                        android:textStyle="normal|bold"
                        android:fontFamily="sans-serif-medium"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:text="Porte"
                        android:padding="3dip"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@android:color/holo_green_light"
                        android:textStyle="normal|bold"
                        android:fontFamily="sans-serif-medium"
                        />
                    <TextView
                        android:text="pequeno"
                        android:gravity="right"
                        android:padding="3dip"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                        android:textSize="10sp"
                        android:textColor="@color/wallet_dim_foreground_inverse_holo_dark"
                        android:textStyle="normal|bold"
                        android:fontFamily="sans-serif-medium"/>
                </TableRow>
            </TableLayout>
            </LinearLayout>
        </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:weightSum="1"
                android:paddingRight="10dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:text="alergias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consultas"
                    android:layout_weight="0.02"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="normal|bold"
                    android:textAlignment="viewStart"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/holo_green_dark"
                    android:padding="5dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView16"
                    android:layout_alignLeft="@+id/textView16"
                    android:layout_alignStart="@+id/textView16"
                    android:layout_marginLeft="10dp"
                    android:weightSum="1"
                    android:layout_weight="0.30">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:text="animal1 - alergia1"
                            android:layout_width="match_parent"
                            android:id="@+id/btn_consulta1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
                            android:textSize="18sp"
                            android:textColor="@android:color/holo_green_dark"
                            android:textStyle="normal|bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/white"
                            android:padding="5dp"
                            android:textAlignment="viewStart"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_height="40dp" />


                    </RelativeLayout>




                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_height="match_parent">

