<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:background="@drawable/veterinario2">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.02"
        android:layout_height="5dp" />

    <TextView
        android:text="Selecionar Imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.02"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:textSize="10sp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/holo_green_dark"
        android:padding="5dp" />

    <RelativeLayout
        android:layout_width="364dp"
        android:layout_height="92dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <ImageButton
            app:srcCompat="@drawable/sem_imagem"
            android:id="@+id/btn_image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="200dp"
            android:padding="5dp"
            android:background="@android:color/holo_green_dark"
            android:layout_width="91dp"
            style="@android:style/Widget.ImageButton"
            android:scaleType="fitEnd" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="375dp">

        <TextView
            android:text="Dados Animais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
            android:textSize="10sp"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@android:color/holo_green_dark" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/campo_nome"
            android:layout_marginLeft="10dp"
            android:hint="Nome"
            android:background="@android:drawable/editbox_background"
            android:layout_height="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/campo_idade"
            android:layout_marginLeft="10dp"
            android:hint="Idade"
            android:background="@android:drawable/editbox_background"
            android:layout_height="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/campo_peso"
            android:layout_marginLeft="10dp"
            android:hint="Peso"
            android:layout_weight="0.02"
            android:background="@android:drawable/editbox_background" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="375dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="Caracteristica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
            android:textSize="10sp"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_green_dark"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/campo_tipo"
            android:layout_marginLeft="10dp"
            android:hint="Tipo Animal"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/campo_raca"
            android:layout_marginLeft="10dp"
            android:hint="RaÃ§a"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>

    <Button
        android:text="Cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cadastrar"
        android:layout_weight="0.02"
        android:background="@android:color/holo_green_dark" />

    <Button
        android:text="Limpar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_limpar"
        android:layout_weight="0.02"
        android:background="@android:color/darker_gray" />

</LinearLayout>